html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style.
      @import url('https://fonts.googleapis.com/css?family=Advent+Pro|Manjari&display=swap');
      p {
      margin: 0;
      }
      .andco-email-template {
      background-size: cover;
      background-image: url('https://test.andcowith.me/assets/images/home.jpg');
      background-position: bottom;
      background-repeat: no-repeat;
      margin: auto;
      font-family: 'Manjari', sans-serif !important;
      padding: 80px 0;
      }
      .inner {
      text-align: center;
      margin: auto;
      }
      .email-img {
      margin-bottom: 40px;
      }
      .inner-box {
      background-color: #B8C9A0;
      box-shadow: 3px 5px 20px #C4D284;
      width: 500px;
      border-radius: 10px;
      text-align: center;
      padding: 50px 40px 30px;
      margin: 0px auto;
      }
      .inner-content p {
      color: #fff;
      font-size: 20px;
      line-height: 33px;
      font-family: 'Manjari', sans-serif !important;
      margin: 20px 0;
      }
      @media(max-width:575px) {
      .inner-box {
      max-width: 80%;
      padding: 20px;
      }
      .email-img img {
      height: 40px;
      }
      .inner-content p {
      font-size: 14px;
      line-height: 20px;
      font-weight: unset;
      }
      .inner-content h2 {
      font-size: 20px;
      }
      }
  body.andco-email-template
    .inner
      .inner-box
        .email-img
          img(src='https://test.andcowith.me/assets/images/andco_logo.png', alt='andco-log')
        .inner-content
          p Hello #{firstName}, you have just signed up to Andco.
